rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read and write their own sub-collections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to access their own thesis metadata
    match /theses/{thesisId} {
      allow read, write, delete: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to read/write their own thesis data
    match /thesis_data/{thesisId} {
      allow read, write, delete: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to read/write their own humanized thesis data
    match /humanized_theses/{thesisId} {
      allow read, write, delete: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to manage their own generation jobs
    match /generation_jobs/{jobId} {
      allow read, write, create, delete: if request.auth != null;
    }
    
    // Public read access to app configuration (if needed)
    match /config/{document} {
      allow read: if true;
    }
    
    // Stripe customer data - users can only access their own
    match /customers/{customerId} {
      allow read, write: if request.auth != null && request.auth.uid == customerId;
      
      // Allow access to subscriptions subcollection
      match /subscriptions/{subscriptionId} {
        allow read, write: if request.auth != null && request.auth.uid == customerId;
      }
      
      // Allow access to payments subcollection
      match /payments/{paymentId} {
        allow read, write: if request.auth != null && request.auth.uid == customerId;
      }
    }
    
    // Stripe products and prices - readable by authenticated users
    match /products/{productId} {
      allow read: if request.auth != null;
      
      match /prices/{priceId} {
        allow read: if request.auth != null;
      }
    }
  }
}
